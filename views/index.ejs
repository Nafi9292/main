<div class="row">
    <div class="col-12">
        <div class="logo-large">
            <div class="logo-symbol">
                <span class="logo-pi">Ï€</span>
            </div>
            <div class="logo-text">
                <div class="logo-main">MATH POWER</div>
                <div class="logo-subtitle">MATH POWER</div>
            </div>
        </div>
        <h2 class="text-center mb-4">
            <i class="fas fa-calculator text-primary me-3"></i>
            Welcome to MATH POWER
        </h2>
        <p class="lead text-center mb-5">Manage students, results, and announcements efficiently</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card text-center h-100 border-primary">
            <div class="card-body">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Students</h5>
                <p class="card-text">View student information and records.</p>
                <a href="/students" class="btn btn-primary">
                    <i class="fas fa-users me-2"></i>View Students
                </a>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Admin only: Add/Edit students
                    </small>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-3">
        <div class="card text-center h-100 border-success">
            <div class="card-body">
                <i class="fas fa-chart-bar fa-3x text-success mb-3"></i>
                <h5 class="card-title">Results</h5>
                <p class="card-text">View student results and track academic performance.</p>
                <a href="/results" class="btn btn-success">
                    <i class="fas fa-chart-bar me-2"></i>View Results
                </a>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Admin only: Add/Edit results
                    </small>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-3">
        <div class="card text-center h-100 border-warning">
            <div class="card-body">
                <i class="fas fa-bullhorn fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Announcements</h5>
                <p class="card-text">View important announcements and stay informed.</p>
                <a href="/announcements" class="btn btn-warning">
                    <i class="fas fa-bullhorn me-2"></i>View Announcements
                </a>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Admin only: Post announcements
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                    <a href="/students/new" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus me-2"></i>Add New Student
                    </a>
                    <% } else { %>
                        <div class="list-group-item list-group-item-action text-muted" style="opacity: 0.5;">
                            <i class="fas fa-plus me-2"></i>Add New Student
                            <span class="badge bg-secondary ms-2">Admin Only</span>
                        </div>
                    <% } %>
                    <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                    <a href="/results/new" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus me-2"></i>Add New Result
                    </a>
                    <% } else { %>
                        <div class="list-group-item list-group-item-action text-muted" style="opacity: 0.5;">
                            <i class="fas fa-plus me-2"></i>Add New Result
                            <span class="badge bg-secondary ms-2">Admin Only</span>
                        </div>
                    <% } %>
                    <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                    <a href="/announcements/new" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus me-2"></i>Post New Announcement
                    </a>
                    <% } else { %>
                        <div class="list-group-item list-group-item-action text-muted" style="opacity: 0.5;">
                            <i class="fas fa-plus me-2"></i>Post New Announcement
                            <span class="badge bg-secondary ms-2">Admin Only</span>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-clock me-2"></i>
                    Recent Activity
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Welcome to the MATH POWER management system. Start by adding students, recording their results, and posting important announcements.</p>
                <div class="alert alert-info">
                    <i class="fas fa-lightbulb me-2"></i>
                    <strong>Tip:</strong> Use the navigation menu above to access different sections of the system.
                </div>
            </div>
        </div>
    </div>
</div> 
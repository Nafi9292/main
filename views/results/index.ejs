<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-chart-bar me-2"></i>
        Results
    </h2>
    <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
    <a href="/results/new" class="btn btn-success">
        <i class="fas fa-plus me-2"></i>Add New Result
    </a>
    <% } else { %>
        <div class="alert alert-info mb-0">
            <i class="fas fa-info-circle me-2"></i>
            Only administrators can add or modify results
        </div>
    <% } %>
</div>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        Result added successfully!
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>
            Results List
        </h5>
    </div>
    <div class="card-body">
        <% if (results && results.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Student</th>
                            <th>Roll Number</th>
                            <th>Subject</th>
                            <th>Marks</th>
                            <th>Percentage</th>
                            <th>Exam Date</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(result => { %>
                            <tr>
                                <td><%= result.id %></td>
                                <td><strong><%= result.student_name %></strong></td>
                                <td><%= result.roll_number %></td>
                                <td><%= result.subject %></td>
                                <td><%= result.marks %> / <%= result.total_marks %></td>
                                <td>
                                    <% const percentage = ((result.marks / result.total_marks) * 100).toFixed(1); %>
                                    <span class="badge <%= percentage >= 80 ? 'bg-success' : percentage >= 60 ? 'bg-warning' : 'bg-danger' %>">
                                        <%= percentage %>%
                                    </span>
                                </td>
                                <td><%= result.exam_date ? new Date(result.exam_date).toLocaleDateString() : '-' %></td>
                                <td><small class="text-muted"><%= new Date(result.created_at).toLocaleDateString() %></small></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No results found</h5>
                <p class="text-muted">Start by adding your first result.</p>
                <a href="/results/new" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Add First Result
                </a>
            </div>
        <% } %>
    </div>
</div> 
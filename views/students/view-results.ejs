<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-chart-bar me-2"></i>
        Student Results
    </h2>
    <a href="/students" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Students
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-user me-2"></i>
            <%= student.name %> - Results
        </h5>
        <small class="text-muted">Roll Number: <%= student.roll_number %> | Class: <%= student.class %></small>
    </div>
    <div class="card-body">
        <% if (results && results.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Subject</th>
                            <th>Marks Obtained</th>
                            <th>Total Marks</th>
                            <th>Percentage</th>
                            <th>Grade</th>
                            <th>Exam Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let totalMarks = 0; let totalObtained = 0; %>
                        <% results.forEach(result => { %>
                            <% totalMarks += result.total_marks; totalObtained += result.marks; %>
                            <tr>
                                <td><strong><%= result.subject %></strong></td>
                                <td><%= result.marks %></td>
                                <td><%= result.total_marks %></td>
                                <td>
                                    <% const percentage = Math.round((result.marks / result.total_marks) * 100); %>
                                    <span class="badge bg-<%= percentage >= 80 ? 'success' : percentage >= 60 ? 'warning' : 'danger' %>">
                                        <%= percentage %>%
                                    </span>
                                </td>
                                <td>
                                    <% let grade = 'F';
                                       if (percentage >= 90) grade = 'A+';
                                       else if (percentage >= 80) grade = 'A';
                                       else if (percentage >= 70) grade = 'B+';
                                       else if (percentage >= 60) grade = 'B';
                                       else if (percentage >= 50) grade = 'C';
                                       else if (percentage >= 40) grade = 'D';
                                    %>
                                    <span class="badge bg-<%= grade === 'A+' || grade === 'A' ? 'success' : grade === 'B+' || grade === 'B' ? 'warning' : grade === 'C' ? 'info' : grade === 'D' ? 'secondary' : 'danger' %>">
                                        <%= grade %>
                                    </span>
                                </td>
                                <td><small class="text-muted"><%= result.exam_date ? new Date(result.exam_date).toLocaleDateString() : 'N/A' %></small></td>
                            </tr>
                        <% }); %>
                    </tbody>
                    <tfoot class="table-info">
                        <tr>
                            <td><strong>Total</strong></td>
                            <td><strong><%= totalObtained %></strong></td>
                            <td><strong><%= totalMarks %></strong></td>
                            <td>
                                <% const overallPercentage = Math.round((totalObtained / totalMarks) * 100); %>
                                <span class="badge bg-<%= overallPercentage >= 80 ? 'success' : overallPercentage >= 60 ? 'warning' : 'danger' %> fs-6">
                                    <%= overallPercentage %>%
                                </span>
                            </td>
                            <td>
                                <% let overallGrade = 'F';
                                   if (overallPercentage >= 90) overallGrade = 'A+';
                                   else if (overallPercentage >= 80) overallGrade = 'A';
                                   else if (overallPercentage >= 70) overallGrade = 'B+';
                                   else if (overallPercentage >= 60) overallGrade = 'B';
                                   else if (overallPercentage >= 50) overallGrade = 'C';
                                   else if (overallPercentage >= 40) overallGrade = 'D';
                                %>
                                <span class="badge bg-<%= overallGrade === 'A+' || overallGrade === 'A' ? 'success' : overallGrade === 'B+' || overallGrade === 'B' ? 'warning' : overallGrade === 'C' ? 'info' : overallGrade === 'D' ? 'secondary' : 'danger' %> fs-6">
                                    <%= overallGrade %>
                                </span>
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            
            <!-- Performance Summary -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Performance Summary</h6>
                            <p class="mb-1"><strong>Total Subjects:</strong> <%= results.length %></p>
                            <p class="mb-1"><strong>Total Marks:</strong> <%= totalObtained %> / <%= totalMarks %></p>
                            <p class="mb-1"><strong>Overall Percentage:</strong> <%= overallPercentage %>%</p>
                            <p class="mb-0"><strong>Overall Grade:</strong> <%= overallGrade %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Grade Legend</h6>
                            <div class="row">
                                <div class="col-6">
                                    <p class="mb-1"><span class="badge bg-success">A+</span> 90-100%</p>
                                    <p class="mb-1"><span class="badge bg-success">A</span> 80-89%</p>
                                    <p class="mb-1"><span class="badge bg-warning">B+</span> 70-79%</p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1"><span class="badge bg-warning">B</span> 60-69%</p>
                                    <p class="mb-1"><span class="badge bg-info">C</span> 50-59%</p>
                                    <p class="mb-1"><span class="badge bg-danger">F</span> Below 40%</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No results found</h5>
                <p class="text-muted">No results have been recorded for this student yet.</p>
            </div>
        <% } %>
    </div>
</div> 